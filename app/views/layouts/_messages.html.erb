<div id="alert-box">
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name.split(' ')[0] == "notice" ? "success" : "danger" %>">
          <a class="close" data-dismiss="alert">&#215;</a>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <% flash.delete(name) %>
        </div>
    <% end %>
  <% end %>
</div>
