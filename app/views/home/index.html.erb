  <%= bootstrap_form_for(@link, :url => root_path) do |f| %>
    <%= f.alert_message 'Errors!' %>
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">New shortening</div>
      </div>
      <div class="panel-body">
        <%= f.text_field :original, label: 'Link to shorten:' %>
        <%= f.text_field :mask, label: 'Optional mask to use:' %>
      </div>
      <div class="panel-footer">
        <%= f.submit 'Shorten' %>
      </div>
    </div>
  <% end %>
